{% extends "PMTWebBundle:Project:layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="span8">
            <h1>New project</h1>
        </div>
    </div>

    <div class="row">
        {{ form_errors(form) }}
        <form action="{{ path('project_new', {'code' : 'project'}) }}" method="post" {{ form_enctype(form) }}>
            <div class="span8">
                <div class="accordion">
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" href="#accordion_details">
                                Details
                            </a>
                        </div>

                        <div id="accordion_details" class="accordion-body collapse in">
                            <div class="accordion-inner">

                                <div class="control-group">
                                    <label class="control-label" for="name">
                                        {{ form_label(form.name) }}
                                    </label>
                                    <div class="controls row-fluid">
                                        {{ form_widget(form.name, {'attr': {'class': 'span12'}}) }}
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="code">
                                        {{ form_label(form.code) }}
                                    </label>
                                    <div class="controls row-fluid">
                                        {{ form_widget(form.code, {'attr': {'class': 'span12'}}) }}
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="description">
                                        {{ form_label(form.description) }}
                                    </label>
                                    <div class="controls row-fluid">
                                        {{ form_widget(form.description, {'attr': {'class': 'span12', 'rows': '10'}}) }}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="span4">
                <div class="accordion">
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" href="#accordion_meta">
                                Meta
                            </a>
                        </div>

                        <div id="accordion_meta" class="accordion-body collapse in">
                            <div class="accordion-inner">

                                <div class="control-group">
                                    <label class="control-label" for="description">
                                        {{ form_label(form.managerId) }}
                                    </label>
                                    <div class="controls row-fluid">
                                        {{ form_widget(form.managerId, {'attr': {'class': 'span12'}}) }}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="span12">
                <div class="form-actions">
                    <div class="form-horizontal">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                            <button type="button" class="btn">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock %}